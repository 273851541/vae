/* pages/my/my.wxss */

.box {
  font-size: 30rpx;
  line-height: 50rpx;
  /* padding: 40rpx 0 */
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.my_title {
  font-size: 35rpx;
  font-weight: bold;
}

.my_label {
  font-size: 25rpx;
  color: #999;
}

.QRCode {
  width: 100%;
  height: 100%;
  text-align: center;
}

.QRIMG {
  width: 300rpx;
  height: 300rpx;
  margin: 40rpx auto;
}

.feedBackIMG {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.feedBack {
  border: none;
  background: none;
  padding: 0;
  margin: 0;
}

.titleBox {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

button:after {
  border: none
}


.loginBox {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.loginBox .wechatAvatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.wechatName {
  font-size: 40rpx;
  font-weight: bold;
  margin-left: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 70%;

}

.One {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.customStyle{
  align-items: center;
  padding: 20rpx 0 !important;
}

.labelStyle{
  margin-top: 0 !important;
}