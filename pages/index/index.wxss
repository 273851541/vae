/**index.wxss**/

.One {
  height: 90%;
  position: relative;
  padding-left: 0;
  padding-right: 0;
}

.banner {
  width: 100%;
  height: 45%;
  border-radius: 15rpx 15rpx 0 0;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
}

.banner image {
  width: 100%;
  height: 690rpx;
}

.content {
  height: 35%;
  padding-left: 50rpx;
  padding-right: 50rpx;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-content: center;
  overflow-y: scroll;
}

.today_text {
  display: block;
  font-size: 30rpx;
  line-height: 70rpx;
}




