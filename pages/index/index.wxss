/**index.wxss**/
@import '../music/music.wxss';

.One {
  position: relative;
  padding-left: 0;
  padding-right: 0;
}

.banner {
  width: 100%;
  /* height: 45%; */
  border-radius: 15rpx 15rpx 0 0;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
}

.banner image {
  width: 100%;
  height: 690rpx;
}

.content {
  min-height: 40%;
  /* max-height: 50%; */
  padding-left: 50rpx;
  padding-right: 50rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-content: center;
  overflow-y: scroll;
}

.today_text {
  display: block;
  font-size: 27rpx;
  line-height: 60rpx;
}

.titleStyle,
.labelStyle {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.customStyle {
  align-items: center;
}

.loadingBox {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  margin: 0 -5%;
  overflow: hidden;
  background: #fff;
  margin-bottom: 100rpx;
  font-size: 25rpx;
}

.dot-bricks {
  position: relative;
  top: 8px;
  left: -9999px;
  width: 10px;
  height: 10px;
  border-radius: 5px;
  background-color: #6ca5fe;
  color: #6ca5fe;
  box-shadow: 9991px -16px 0 0 #6ca5fe, 9991px 0 0 0 #6ca5fe, 10007px 0 0 0 #6ca5fe;
  animation: dotBricks 2s infinite ease;
}


.hide {
  display: none
}


swiper,
swiper-item {
  height: 100vh !important;
}

.pulltopstyle {
  font-size: 28rpx;
  text-align: center;
  color: #ccc;
}


.operaBox {
  padding: 0 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;

}

.musicPlayer {
  position: relative !important;
  bottom: 0 !important;
  top: 0 !important;
  right: 0 !important;
}

.music_image,
.musicPlayer,
.musicBtn {
  width: 80rpx !important;
  height: 80rpx !important;
}

.musicBtn_img {
  width: 30rpx !important;
  height: 30rpx !important;
}

.loveStyle {
  width: 65rpx;
  height: 65rpx;
  display: flex;
  margin-left: 20rpx;
}

.operaToolBox {
  display: flex;
}

.shareBoxStyle {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  width: 100%;
  height: 100%;
  padding-top: 30rpx;
}

.shareBoxItemStyle {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 25rpx;
  position: relative;
}

.shareBoxItemStyle image {
  width: 90rpx;
  height: 90rpx;
  margin-bottom: 20rpx;
}

.shareBoxStyle button {
  margin: 0;
  padding: 0;
  line-height: 0;
  border-radius: none;
  background: none;
  width: 100rpx;
  height: 150rpx;
  position: absolute;

}

/* #poster {
  width: 100rpx;
  height: 150rpx;
  position: absolute;

} */

.shareBoxStyle button:after {
  border: none;
}

@keyframes dotBricks {
  0% {
    box-shadow: 9991px -16px 0 0 #6ca5fe, 9991px 0 0 0 #6ca5fe, 10007px 0 0 0 #6ca5fe;
  }

  8.333% {
    box-shadow: 10007px -16px 0 0 #6ca5fe, 9991px 0 0 0 #6ca5fe, 10007px 0 0 0 #6ca5fe;
  }

  16.667% {
    box-shadow: 10007px -16px 0 0 #6ca5fe, 9991px -16px 0 0 #6ca5fe, 10007px 0 0 0 #6ca5fe;
  }

  25% {
    box-shadow: 10007px -16px 0 0 #6ca5fe, 9991px -16px 0 0 #6ca5fe, 9991px 0 0 0 #6ca5fe;
  }

  33.333% {
    box-shadow: 10007px 0 0 0 #6ca5fe, 9991px -16px 0 0 #6ca5fe, 9991px 0 0 0 #6ca5fe;
  }

  41.667% {
    box-shadow: 10007px 0 0 0 #6ca5fe, 10007px -16px 0 0 #6ca5fe, 9991px 0 0 0 #6ca5fe;
  }

  50% {
    box-shadow: 10007px 0 0 0 #6ca5fe, 10007px -16px 0 0 #6ca5fe, 9991px -16px 0 0 #6ca5fe;
  }

  58.333% {
    box-shadow: 9991px 0 0 0 #6ca5fe, 10007px -16px 0 0 #6ca5fe, 9991px -16px 0 0 #6ca5fe;
  }

  66.666% {
    box-shadow: 9991px 0 0 0 #6ca5fe, 10007px 0 0 0 #6ca5fe, 9991px -16px 0 0 #6ca5fe;
  }

  75% {
    box-shadow: 9991px 0 0 0 #6ca5fe, 10007px 0 0 0 #6ca5fe, 10007px -16px 0 0 #6ca5fe;
  }

  83.333% {
    box-shadow: 9991px -16px 0 0 #6ca5fe, 10007px 0 0 0 #6ca5fe, 10007px -16px 0 0 #6ca5fe;
  }

  91.667% {
    box-shadow: 9991px -16px 0 0 #6ca5fe, 9991px 0 0 0 #6ca5fe, 10007px -16px 0 0 #6ca5fe;
  }

  100% {
    box-shadow: 9991px -16px 0 0 #6ca5fe, 9991px 0 0 0 #6ca5fe, 10007px 0 0 0 #6ca5fe;
  }
}