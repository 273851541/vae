<view class="container">
  <view class='title'>
    <text class='titile_item {{currentSwiperId==0?"title_item_action":""}}' bindtap='clickTab' data-current='0'>单曲</text>
    <text class='titile_item {{currentSwiperId==1?"title_item_action":""}}' bindtap='clickTab' data-current='1'>专辑</text>
  </view>
  <swiper style='height:100%;overflow:hidden;' current="{{currentSwiperId}}" bindchange='bindchange'>
    <swiper-item style='overflow-y:scroll'>
      <view wx:for="{{playList}}" wx:key="{{item.id}}" class='musicItem' bindtap='toPlayerView' data-id='{{item.id}}' data-type='itemBtn'>
        <view class='musicItem_container'>
          <image src='{{item.al.picUrl}}' wx:if="{{playList}}"></image>
          <text>{{item.name}}</text>
        </view>
      </view>
    </swiper-item>
    <swiper-item style='overflow-y:scroll'>
      <view class='albumsContext'>
        <view wx:for='{{albumsList}}' wx:key="{{item.id}}" data-id='{{item.id}}' class='albumsBox' bindtap='toAlbumsDetails'>
          <view class='imgBox'>
            <image src='{{item.picUrl}}' class='imgs'></image>
            <image src='../../utils/src/albums.png' class='imgs_other'></image>
          </view>
          <text class='albumsName'>{{item.name}}</text>
        </view>
      </view>
    </swiper-item>
  </swiper>
  <view class="musicPlayer {{playStatus?'musicPlayerAction':''}}" bindtap='toPlayerView' data-id='{{currentId}}' data-type='playBtn'>
    <image class="music_image  {{playStatus?'playRotation':''}}" src="{{imgurl}}"></image>
    <view class='musicBtn'>
      <image src='../../utils/src/bars.svg' style='width:40rpx' wx:if='{{playStatus}}'></image>
      <image src='../../utils/src/music_icon.png' style='width:50rpx;height:50rpx' wx:if='{{!playStatus}}'></image>
    </view>
  </view>
</view>