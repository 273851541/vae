@import "../music/music.wxss";

.bg_color {
  width: 100%;
  height: 500rpx;
  background-position: 50%;
  -webkit-filter: blur(30px);
  filter: blur(30px);
  -webkit-transform: scale(2);
  transform: scale(2);
}

.bg_color:after {
  content: " ";
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  height: 500rpx;
  background: rgba(0, 0, 0, 0.2);
}

.EPBanner {
  width: 100%;
  height: 500rpx;
  position: relative;
}

.imgBox, .imgs {
  width: 250rpx;
  height: 250rpx;
  border-radius: 5rpx;
}

.imgs {
  box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.3);
}

.imgBox {
  position: relative;
}

.imgs_other {
  position: absolute;
  top: 0;
  right: -1;
  width: 40rpx;
  height: 250rpx;
}

.EPInfo {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.EPContent {
  display: flex;
  flex-direction: column;
  margin-left: 35px;
  font-size: 15px;
  color: rgba(255, 255, 255, 0.7);
  justify-content: flex-start;
  height: 250rpx;
}
