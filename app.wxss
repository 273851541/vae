/**app.wxss**/



page {
  width: 100%;
  height: 100%;
  font-family: 'Microsoft Yahei';
  /* background: #E6E6E6 */
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  /* padding-top: 120rpx; */
  /* background: rgb(245, 245, 245); *//* align-items: center; */
}

.box {
  /* width: 100%; */
  /* min-height: 100rpx; */
  background: #fff;
  border-radius: 15rpx;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
  /* box-shadow: 0px 5px 20px -5px #DDD; */
  margin: 20rpx 30rpx 20rpx 30rpx;
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.title {
  font-size: 50rpx;
  font-weight: bold;
  margin: 15rpx 0;
}

.musicPlayer {
  position: absolute !important;
  bottom: 30rpx !important;
  right: 30rpx !important;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #eee;
  overflow: hidden;
  box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.3);
  z-index: 100;
}

.music_image {
  width: 100rpx !important;
  height: 100rpx !important;
}

.musicBtn {
  width: 100rpx;
  height: 100rpx;
  background: rgba(0, 0, 0, 0.2);
  position: absolute;
  top: 0;
  left: 0;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.musicBtn_img {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}

@-webkit-keyframes rotation{
from {-webkit-transform: rotate(0deg);}
to {-webkit-transform: rotate(360deg);}
}

.loadingRotation{
-webkit-transform: rotate(360deg);
animation: rotation 3s linear infinite;
-moz-animation: rotation 3s linear infinite;
-webkit-animation: rotation 3s linear infinite;
-o-animation: rotation 3s linear infinite;
}

.playRotation{
-webkit-transform: rotate(360deg);
animation: rotation 13s linear infinite;
-moz-animation: rotation 13s linear infinite;
-webkit-animation: rotation 13s linear infinite;
-o-animation: rotation 13s linear infinite;
}

.musicPlayerAction {
  -webkit-animation-name: bluePulse;
  -webkit-animation-duration: 4s;
  -webkit-animation-duration: 2s;
  -webkit-animation-iteration-count: infinite;
}

@-webkit-keyframes bluePulse {
  from {
    /* background-color: #007d9a; */
    -webkit-box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.3);
  }

  50% {
    /* background-color: #6ca5fe; */
    -webkit-box-shadow: 0 0 18px rgba(0, 0, 0, 0.7);
  }

  to {
    /* background-color: #007d9a; */
    -webkit-box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.3);
  }
}